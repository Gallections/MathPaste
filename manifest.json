{
    "manifest_version": 3,
    "name": "Math Paste",
    "version": "1.0.0",
    "description": "An light weight application that aims to ease the transfer of rendered math equations from GPT to Notion",
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardRead",
        "clipboardWrite"
    ],
    "web_accessible_resources": [
        {
            "resources": ["icons/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["copy.js", 
                    "frontend.js"],
            "css": ["style.css"]
        }
    ],
    "action": {
        "default_title": "Math Paste",
        "default_popup": "popup.html"
    },
    "commands": {
        "toggle-math-paste": {
            "suggested_key": {
                "default": "Ctrl+M",
                "mac": "Command+M"
            },
            "description": "Toggle math-paste on/off"
        }
    }
  }