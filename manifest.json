{
    "manifest_version": 3,
    "name": "Math Paste",
    "version": "1.0.0",
    "description": "An light weight application that aims to ease the transfer of rendered math equations from GPT to Notion",
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardRead",
        "clipboardWrite"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["copy.js"]
        }
    ],
    "action": {
        "default_title": "Math Paste",
        "default_popup": "popup.html"
    }

  }